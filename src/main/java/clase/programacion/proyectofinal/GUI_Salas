DefaultTableModel mdl = new DefaultTableModel();
ArrayList<Salas> listSalasCine = new ArrayList<Salas>();

public GUI_Salas() {
        initComponents();
        setTitle("MANTENIMIENTO DE SALAS");
        
        mdl.addColumn("Sala");
        
        
        refreshTable();
    }

