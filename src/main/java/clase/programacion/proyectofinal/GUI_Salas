private void num_SalaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_num_SalaActionPerformed
        // TODO add your handling code here:
    }//GEN-LAST:event_num_SalaActionPerformed


private void bot_EliminarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_bot_EliminarActionPerformed
        int fila = tabla_SalasCine.getSelectedRow();
        
        if(fila >=0){
            mdl.removeRow(fila);
        }
        else{
            JOptionPane.showMessageDialog(null, "Seleccione una fila para eliminar.");
        }
    }//GEN-LAST:event_b_EliminarActionPerformed


private void bot_AgregarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_bot_AgregarActionPerformed
        
        try{
            Salas salascine = new Salas();
            salascine.setSala(num_Sala.getSelectedItem().toString());
            listSalascine.add(salascine);
            refreshTable();
            } catch(Exception e){
                JOptionPane.showMessageDialog(null, "Faltan datos.");
            
        }
        
    }//GEN-LAST:event_bot_AgregarActionPerformed


private void bot_ClearActionPerformed(java.awt.event.ActionEvent evt) {        
int fila = tabla_Salascine.getRowCount();
        
        for(int i = fila-1; i >=0; i--){
            mdl.removeRow(i);
        }
    }//GEN-LAST:event_b_ClearActionPerformed

    
    public void refreshTable(){
        //Borrar todos los elementos del modelo.
        while(mdl.getRowCount()>0){
            mdl.removeRow(0);
        }
        
        for(Salas sal : listSalasCine){
            Object o[] = new Object[1];
            o[0] = sal.getSala();
            mdl.addRow(o);
        }
        
        tabla_Salascine.setModel(mdl);
    }













